.detail {
  background-color: #f8f8f8;
  min-height: calc(100vh - 0px);
  width: 100%;
}
.detail .container {
  background-color: #fff;
  padding: 30rpx;
}
.detail .container .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}
.detail .container .userinfo {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}
.detail .container .userinfo .info {
  margin-left: 24rpx;
}
.detail .container .userinfo .info .name {
  font-size: 30rpx;
}
.detail .container .userinfo .info .addr {
  font-size: 26rpx;
  color: #999;
}
.detail .container .content {
  font-size: 28rpx;
  color: #555;
}
.detail .container .like {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 20rpx;
}
.detail .container .like .users {
  display: flex;
}
.detail .container .like .users .u-avatar {
  margin-left: -14rpx;
}
.detail .container .like .hand {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 50rpx;
  width: 150rpx;
  height: 100rpx;
  background-color: #4edd76;
}
.detail .container .like .hand .iconfont {
  font-size: 34rpx;
}
.detail .container .like .hand .count {
  font-size: 24rpx;
}
.detail .container .like .hand.active {
  background-color: #eaeaea;
}
.detail .container .like .users {
  padding: 10rpx 0;
}
.detail .container .like .view-count {
  font-size: 26rpx;
  color: #555;
}
.detail .container .like .view-count .num {
  color: #00aaff;
}
.detail .comment .item-panel {
  padding: 30rpx;
  padding-bottom: 130rpx;
}

